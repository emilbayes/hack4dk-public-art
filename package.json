{
  "name": "hack4dk-public-art",
  "version": "0.0.0",
  "description": "Visualisation of public art in Denmark, bought by Kunst Styrelsen (the Art Agency)",
  "main": "src/index.js",
  "scripts": {
    "test": "standard",
    "clean": "rm -rf dist src/bundle.js src/bundle.css",
    "bundle": "npm run clean && mkdir -p dist && (npm run bundle-js & npm run bundle-css & npm run bundle-assets & wait)",
    "bundle-css": "cssnext src/index.css dist/bundle.css",
    "bundle-js": "browserify src/index.js -o dist/bundle.js",
    "bundle-assets": "cp -r src/*.html dist",
    "watch": "npm run watch-css & npm run watch-js & npm run serve & wait",
    "watch-css": "cssnext --watch src/index.css src/bundle.css",
    "watch-js": "watchify src/index.js -o src/bundle.js",
    "serve": "ecstatic src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emilbayes/hack4dk-public-art.git"
  },
  "keywords": [
    "visualisation",
    "d3",
    "public",
    "art",
    "hack4dk",
    "okf",
    "open",
    "data"
  ],
  "author": "Emil Bay <github@tixz.dk>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emilbayes/hack4dk-public-art/issues"
  },
  "homepage": "https://github.com/emilbayes/hack4dk-public-art#readme",
  "devDependencies": {
    "browserify": "^11.2.0",
    "cssnext": "^1.8.4",
    "ecstatic": "^1.1.0",
    "standard": "^5.3.1"
  },
  "dependencies": {
    "d3": "^3.5.6",
    "d3-convention": "^2.0.0"
  }
}
